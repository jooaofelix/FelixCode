<script>

var myVideo2 = document.querySelector("#video2");
 function playPause2(){
    if(myVideo2.paused){
        myVideo2.play();
    } else
    myVideo2.pause();
}
var myVideo = document.querySelector("#video");
 function playPause(){
    if(myVideo.paused){
        myVideo.play();
    } else
    myVideo.pause();
}


</script>
                  
            
